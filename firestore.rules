rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /waitlist/{email} {
      allow create: if request.auth != null; // Allow authenticated users to create waitlist entries
      allow read: if request.auth != null && request.auth.token.email == email; // Allow users to read their own entry
      allow write: if false; // No updates or deletes
    }
    match /referrals/{referralCode} {
      allow read: if true; // Publicly readable for tracking
      allow write: if request.auth != null; // Only authenticated users can write/update referral data
    }
  }
}
