rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /referrals/{referralCode} {
      allow read, write: if request.auth != null; // Only authenticated users can manage referral codes
      allow create: if true; // Anyone can create a referral code (e.g., via API)

      match /referredUsers/{referredUserId} {
        allow read, write: if request.auth != null; // Only authenticated users can manage referred users
        allow create: if true; // Anyone can add referred users (e.g., via API)
      }
    }
  }
}
