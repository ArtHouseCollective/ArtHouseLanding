rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow read access to 'referrals' and 'stats' collections
    match /referrals/{referralCode} {
      allow read: if true;
    }

    match /stats/{statId} {
      allow read: if true;
    }

    // Allow write access to 'users' collection for new signups
    match /users/{userId} {
      allow create: if true;
      allow update: if false; // Prevent updates to user data after creation
      allow delete: if false;
      allow read: if false; // Users cannot read other user data
    }
  }
}
