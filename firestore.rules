rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /referrals/{referralCode} {
      allow read, write: if request.auth != null; // Only authenticated users can manage their own referral codes
      allow create: if request.auth == null; // Allow unauthenticated users to create a new referral code (e.g., on signup)

      // Allow anyone to read referral stats (e.g., count of referred users)
      match /referredUsers/{referredUserId} {
        allow read: if true;
        allow create: if request.auth == null; // Allow unauthenticated users to be added as referred
      }
    }
  }
}
